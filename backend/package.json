{
    "name": "backend",
    "version": "1.0.0",
    "type": "module",
    "description": "Stampee Backend API",
    "main": "dist/main.js",
    "scripts": {
        "dev": "nodemon --watch src --ext ts --exec tsx src/main.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/main.js",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "typeorm": "node --loader ts-node/esm ./node_modules/typeorm/cli.js -d src/data-source.ts",
        "migration:run": "pnpm typeorm migration:run",
        "migration:revert": "pnpm typeorm migration:revert",
        "migration:show": "pnpm typeorm migration:show"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@nestjs/common": "^10.4.7",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.4.7",
        "@nestjs/platform-express": "^10.4.7",
        "@nestjs/typeorm": "^10.0.2",
        "archiver": "^6.0.2",
        "bullmq": "^5.22.2",
        "clamav.js": "^0.12.0",
        "dotenv": "^16.4.5",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.11.3",
        "nodemailer": "^6.9.15",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^22.5.5",
        "@types/express": "^4.17.21",
        "@types/multer": "^1.4.12",
        "@types/nodemailer": "^6.4.15",
        "@types/archiver": "^6.0.4",
        "@types/clamav.js": "^0.12.0",
        "@types/supertest": "^6.0.3",
        "@nestjs/testing": "^10.4.7",
        "supertest": "^7.0.0",
        "ts-node": "^10.9.2",
        "@typescript-eslint/eslint-plugin": "^8.5.0",
        "@typescript-eslint/parser": "^8.5.0",
        "eslint": "^9.10.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2",
        "vitest": "^2.1.1"
    }
}
